# ========================================
# ADMIN PANEL ENVIRONMENT VARIABLES
# ========================================

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3000/api
NEXT_PUBLIC_BACKEND_URL=http://localhost:3000
NEXT_PUBLIC_IMAGE_URL=http://localhost:3000/images

# Admin Configuration
NEXT_PUBLIC_ADMIN_TITLE=ShopTao Admin Panel
NEXT_PUBLIC_ADMIN_VERSION=1.0.0

# Bank Management
NEXT_PUBLIC_BANK_API_ENABLED=true
NEXT_PUBLIC_AUTO_PAYMENT_ENABLED=true

# Dashboard Configuration
NEXT_PUBLIC_DASHBOARD_REFRESH_INTERVAL=30000
NEXT_PUBLIC_CHART_UPDATE_INTERVAL=60000

# File Upload
NEXT_PUBLIC_MAX_FILE_SIZE=5242880
NEXT_PUBLIC_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# Security
NEXT_PUBLIC_SESSION_TIMEOUT=3600000
NEXT_PUBLIC_MAX_LOGIN_ATTEMPTS=5

# ========================================
# DEVELOPMENT ONLY - REMOVE IN PRODUCTION
# ========================================
NEXT_PUBLIC_DEBUG=true
NEXT_PUBLIC_SHOW_DEV_TOOLS=true 